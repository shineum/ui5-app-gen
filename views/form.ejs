<!--Opening the ejs tags for including header file-->
<%- include("./partials/header") %>

<h2>UI5 Initializer</h2>
<div class="form-container">
    <form action="/" method="POST">
        <label>App name: </label>
        <input type="text" placeholder="demo-app" name="app-name">
        <label>App id: </label>
        <input type="text" placeholder="com.example.demo" name="app-id">
        <label>App title: </label>
        <input type="text" placeholder="Demo App" name="app-title">
        <label>App theme: </label>
        <input type="text" placeholder="sap_fiori_3" name="app-theme">
        <label>App version: </label>
        <input type="text" placeholder="0.0.1" name="app-version">
        <label>UI5 minimum version: </label>
        <input type="text" placeholder="1.121.0" name="ui5-min-version">
        <label>UI5 lib version: </label>
        <input type="text" placeholder="1.131.1" name="ui5-version">
        <button>Generate</button>
    </form>
</div>

<!--Opening the ejs tags for including footer file-->
<%- include("./partials/footer") %>
